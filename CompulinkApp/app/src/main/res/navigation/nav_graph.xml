<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_dash">

    <fragment
        android:id="@+id/nav_dash"
        android:name="com.example.compulinkapp.fragments.HomeDashFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home_dash"/>
    <fragment
        android:id="@+id/nav_jobs"
        android:name="com.example.compulinkapp.fragments.JobFragment"
        android:label="JobFragment"
        tools:layout="@layout/fragment_jobs"/>
    <fragment
        android:id="@+id/nav_more"
        android:name="com.example.compulinkapp.fragments.MoreFragment"
        android:label="MoreFragment"
        tools:layout="@layout/fragment_more"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.compulinkapp.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.compulinkapp.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settingsToAbout"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.compulinkapp.fragments.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/facebookFeedFragment"
        android:name="com.example.compulinkapp.fragments.FacebookFeedFragment"
        android:label="FacebookFeedFragment"
        tools:layout="@layout/fragment_facebook_feed"/>
    <fragment
        android:id="@+id/nav_sales"
        android:name="com.example.compulinkapp.fragments.SalesFragment"
        android:label="SalesFragment"
        tools:layout="@layout/fragment_sales_management"/>
</navigation>