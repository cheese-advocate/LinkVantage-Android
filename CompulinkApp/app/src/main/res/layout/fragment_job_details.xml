<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/jobsDetails_fragment_refreshSwipe"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/android_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Details"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/details_container"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/seeThrough"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_details" />

            <TextView
                android:id="@+id/priorityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Priority:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toTopOf="@id/details_container" />

            <TextView
                android:id="@+id/priorityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toTopOf="@id/details_container" />

            <TextView
                android:id="@+id/dueDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Due Date:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/priorityTV" />

            <TextView
                android:id="@+id/dueDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/priorityText" />

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Status:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/dueDateTV" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/dueDateText" />

            <TextView
                android:id="@+id/categoryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Category:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/statusTV" />

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/statusText" />

            <TextView
                android:id="@+id/clientTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Client:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/categoryTV" />

            <TextView
                android:id="@+id/clientText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/categoryText" />

            <TextView
                android:id="@+id/locationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Location:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/clientTV" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/clientText" />

            <TextView
                android:id="@+id/descTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Description:"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/details_container"
                app:layout_constraintTop_toBottomOf="@id/locationTV" />

            <TextView
                android:id="@+id/descText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TEST TEST"
                android:textColor="@color/textColor"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/guidelineText"
                app:layout_constraintTop_toBottomOf="@id/locationText" />

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Tasks"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_container" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/task_scroll"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_title">

                <LinearLayout
                    android:id="@+id/task_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
