                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/taskList_addContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_scroll">

                <EditText
                    android:id="@+id/task_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat"
                    android:hint="Add task..."
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/addTaskBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/montserrat"
                    android:text="ADD"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/title_milestones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Milestones"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskList_addContainer" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/milestone_scroll"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_milestones">

                <LinearLayout
                    android:id="@+id/milestone_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

